<%- include('../inc/header.ejs', {
title: title
})  %>
<div class="row m-5">
    <div class="col-12 col-md-6 offset-md-3">
        <form id="editForm" class="login-form" novalidate autocomplete="off">
            <h2>Edit User</h2>
            <h6 class="d-none" id="error-msg"></h6>
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" id="username" type="text" name="username" value="<%= user.name %>"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" id="password" type="password" name="password" value="<%= user.pass %>"/>
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" id="image" type="text" name="imageUrl" value="<%= user.imageUrl %>"/>
            </div>
            <button type="button" class="btn btn-primary" onclick="tryEdit()">Update</button>
        </form>

    </div>
</div>
<style>
    input{
        width: 100%;
        max-width: 300px;
        margin-bottom: 20px;
    }
    #error-msg{
        color: red;
        background-color: #FAC5C5FF;
        padding: 8px;
        border-radius: 5px;
    }
</style>
<script>
    function tryEdit(){
        document.getElementById('error-msg').classList.add('d-none');
        let user = document.getElementById('username').value;
        let pass = document.getElementById('password').value;
        let image = document.getElementById('image').value;

        fetch(`http://localhost:3000/user/<%= user.id %>/edit`,{
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                user: {
                    id: '<%= user.id %>',
                    name: user,
                    pass: pass,
                    imageUrl: image
                }
            })
        }).then(response => {
            return response.json();
        }).then(data => {
            console.log(data);
            if(data.status === 200){
                document.getElementById('error-msg').classList.remove('d-none');
                document.getElementById('error-msg').style.backgroundColor = '#aaffb3';
                document.getElementById('error-msg').style.color = 'green';
                document.getElementById('error-msg').textContent = data.message;
                setTimeout(()=>{
                    window.location.reload();
                }, 3000);
            }else{
                document.getElementById('error-msg').classList.remove('d-none');
                document.getElementById('error-msg').textContent = data.message;
            }
        }).catch(err => {
            console.log(err.message);
        });
    }
</script>
<%- include('../inc/footer.ejs')  %>